{
  "ignore": [
    "*",
    "bin",
    "node/**",
    "node_modules/**",
    "**/*.svg",
    "docs/**",
    "docker/**",
    "**/*.generated.*",
    "coverage/**",
    "dist/**",
    "dist-tsc/**",
    "**/.*/**",
    "**/*.mdx",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/*.adoc",
    "LICENSE.txt",
    ".*",
    ".*/**",
    "package-json.lock",
    "yarn.lock",
    ".tmp/**",
    ".vscode/**",
    "grafana/**"
  ],
  "license": "LICENSE_TEMPLATE.txt",
  "licenseFormats": {
    "js|ts|scss|less|php|as|c|java|cpp|go|cto|acl": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "css": {
      "prepend": "/**",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "html": {
      "prepend": "<!--\n",
      "append": "\n-->",
      "eachLine": {
        "prepend": "    "
      }
    },
    "txt": {}
  },
  "defaultFormat": {
    "prepend": "/*",
    "append": " */",
    "eachLine": {
      "prepend": " * "
    }
  },
  "regexIdentifier": "###"
}
